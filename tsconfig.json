{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "types": ["@types/node", "@nuxt/types", "nuxt"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "types/**/*.d.ts"
  ]
}